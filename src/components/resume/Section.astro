---
import HR from "../HR.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="flex flex-col w-full gap-2">
    <div class="flex flex-col w-full">
        <h2>{title}</h2>
        <HR />
    </div>
    <div class="flex flex-col w-full gap-2">
        <slot />
    </div>
</div>
