---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/Container.astro";
import CanvasConnector from "@/components/CanvasConnector";

import { getHome } from "@/services/home";
import Markdown from "@/components/Markdown.astro";
import Prose from "@/components/Prose.astro";
import SwapWords from "@/components/SwapWordsWrapper.astro";
import Markdown2 from "@/components/Markdown2.astro";

const { title, Content } = await getHome(Astro.locals.language);
---

<Layout title={title}>
    <Container>
        <div class="h-full pt-24 max-sm:pt-36 flex flex-col gap-4 w-full">
            <Markdown2 Content={Content} components={{ SwapWords }} />
        </div>
    </Container>

    <CanvasConnector
        client:load
        startSelector='[data-tag="start-arrow"]'
        endSelector='[data-tag="end-arrow"]'
        color="rgba(107,114,128,0.9)"
        width={2}
        animate={true}
    />
</Layout>
